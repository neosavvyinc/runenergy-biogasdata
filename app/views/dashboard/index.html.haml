.span12{'ng-controller' => 'controllers.SiteController'}
  %re-bootstrap-button-dropdown{'items' => 'customers', 'selected-item' => 'dashboardHeaderData.customer', 'label-field' => 'name', 'ng-show' => (not current_user.is_customer?).to_s}
  %re-bootstrap-button-dropdown{'items' => 'locations', 'selected-item' => 'dashboardHeaderData.site', 'label-field' => 'site_name'}
  %re-bootstrap-button-dropdown{'items' => 'flareSpecifications | collectionFilterProperty : "location.id" : dashboardHeaderData.site.id', 'selected-item' => 'dashboardHeaderData.flareSpecification', 'label-field' => 'flare_id'}
  = link_to "Log Out", destroy_user_session_path, :method => :delete, :class => 'btn btn-danger'
.span12
  -#%re-bootstrap-datepicker{'data-value' => 'dashboardDateData.startDate'}
  -#%re-bootstrap-datepicker{'data-value' => 'dashboardDateData.endDate'}
.span12{'ng-controller' => 'controllers.PageController'}
  %a.btn{'ng-click' => 'onPrevious()'} Prev Page
  %a.btn{'ng-click' => 'onNext()'} Next Page
  %a.btn{'ng-href' => '{{ getExportCSVLink() }}'} Export To CSV
.dashboard.container-fluid
  %ng-view

- content_for :javascript do
  :javascript
    angular.element(document).ready(function() {
       angular.bootstrap(document, ['dashboard']);
     });

