.span12{'ng-controller' => 'controllers.SiteController'}
  %re-bootstrap-button-dropdown{'items' => 'customers', 'selected-item' => 'selectedCustomer', 'label-field' => 'name', 'ng-show' => (not current_user.is_customer?).to_s}
  %re-bootstrap-button-dropdown{'items' => 'locations', 'selected-item' => 'selectedLocation', 'label-field' => 'site_name'}
  %re-bootstrap-button-dropdown{'items' => 'flareSpecifications | collectionFilterProperty : "location.id" : selectedLocation.id', 'selected-item' => 'selectedFlareSpecification', 'label-field' => 'flare_id'}
  = link_to "Log Out", destroy_user_session_path, :method => :delete, :class => 'btn btn-danger'
.span12
  %span Date Range
  %span LOW END HERE
  %span HIGH END HERE
.span12{'ng-controller' => 'controllers.PageController'}
  %a.btn{'ng-click' => 'onPrevious()'} Prev Page
  %a.btn{'ng-click' => 'onNext()'} Next Page
.dashboard.span12
  %ng-view

- content_for :javascript do
  :javascript
    angular.element(document).ready(function() {
       angular.bootstrap(document, ['dashboard']);
     });

