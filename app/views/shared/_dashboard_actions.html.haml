.dashboard-actions{'ng-controller' => 'controllers.DashboardActionController'}
  %ns-serialize{'data' => landfill_operators.to_json(:methods => [:location_ids]).html_safe, 'property' => 'landfillOperators'}
  %ns-serialize{'data' => sites.to_json(:methods => [:section_ids]).html_safe, 'property' => 'sites'}
  %ns-serialize{'data' => sections.to_json(:methods => [:asset_ids]).html_safe, 'property' => 'sections'}
  - unless assets.nil?
    %ns-serialize{'data' => assets.to_json(:methods => [:monitor_class_ids]).html_safe, 'property' => 'assets'}
  %ns-serialize{'data' => monitor_classes.to_json(:include => [:monitor_points, :field_log_points]).html_safe, 'property' => 'monitorClasses'}
  %re-bootstrap-button-dropdown.location{'items' => 'landfillOperators', 'selected-item' => 'newDataValues.selectedLandfillOperator', 'label-field' => 'name', 'link-class' => 'btn-success', 'default' => 'Choose Landfill Operator'}
  %re-bootstrap-button-dropdown.location{'items' => 'sites | nsCollectionFilterProperties : "id" : newDataValues.selectedLandfillOperator.location_ids', 'selected-item' => 'newDataValues.selectedSite', 'label-field' => 'site_name', 'link-class' => 'btn-success', 'default' => 'Choose Site'}
  %re-bootstrap-button-dropdown.location{'disabled' => '{{newDataValues.selectedAsset | nsLogicalIf : "false" : "true"}}', 'items' => 'monitorClasses | nsCollectionFilterProperties : "id" : newDataValues.selectedAsset.monitor_class_ids', 'selected-item' => 'newDataValues.selectedMonitorClass', 'label-field' => 'name', 'link-class' => '{{newDataValues.selectedAsset | nsLogicalIf : "btn-success" : "btn"}}', 'default' => 'Choose Monitor Class'}
  %re-bootstrap-button-dropdown.location{'disabled' => '{{newDataValues.selectedSite | nsLogicalIf : "false" : "true"}}', 'items' => 'sections | nsCollectionFilterProperties : "id" : newDataValues.selectedSite.section_ids', 'selected-item' => 'newDataValues.selectedSection', 'label-field' => 'name', 'link-class' => '{{newDataValues.selectedSite | nsLogicalIf : "btn-success" : "btn"}}', 'default' => 'Choose Section'}
  - unless assets.nil?
    %re-bootstrap-button-dropdown.location{'disabled' => '{{newDataValues.selectedSection | nsLogicalIf : "false" : "true"}}', 'items' => 'assets | nsCollectionFilterProperties : "id" : newDataValues.selectedSection.asset_ids', 'selected-item' => 'newDataValues.selectedAsset', 'label-field' => 'name', 'link-class' => '{{newDataValues.selectedSection | nsLogicalIf : "btn-success" : "btn"}}', 'default' => 'Choose Asset'}
